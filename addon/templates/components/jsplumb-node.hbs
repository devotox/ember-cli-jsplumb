{{#paper-card class="layout-column layout-align-center-center layout-fill"}}

  {{#if jsplumbUtils.editable}}
    {{#paper-content class="layout-row layout-align-space-between-center action-wrapper"}}
      {{paper-icon "edit" class="edit-node" click=(action "editNode")}}
      {{paper-icon "add_circle" class="connect-node"}}
      {{paper-icon "remove_circle" class="delete-node" click=(action "deleteNode")}}
    {{/paper-content}}
  {{/if}}

  {{#paper-content class="layout-column layout-align-center-center flex-100 text-wrapper"}}
    {{#if jsplumbUtils.editable}}
      {{content-editable
        value=node.text
        tagName="span"
        allowNewlines=false
        placeholder="Enter Node Label"
      }}
    {{else}}
      {{node.text}}
    {{/if}}
  {{/paper-content}}

{{/paper-card}}